{
  "wandb": { "project": "test", "api_key": "" },

  "model": {
    "model_id": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    "tokenizer_id": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    "load_in_4bit": true,
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_use_double_quant": true
  },

  "peft": {
    "r": 8,
    "lora_alpha": 16,
    "lora_dropout": 0.05,
    "target_modules": ["q_proj", "k_proj", "v_proj", "o_proj"],
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },

  "data": {
    "dataset_id": "jordanpainter/dialect-preferences",
    "dataset_split": "train",
    "seed": 42,
    "test_size": 0.02,
    "smoke_subset_train": 64,
    "smoke_subset_eval": 32,
    "system_prompt": "You are a helpful assistant. Match the requested English dialect naturally."
  },

  "rewards": {
    "w_dialect": 0.0
  },

 "trainer": {
    "output_dir": "outputs/grpo_smoke_no_comet",
    "report_to": "none",

    "max_steps": 20,
    "learning_rate": 5e-5,
    "warmup_ratio": 0.05,
    "weight_decay": 0.0,

    "bf16": true,
    "fp16": false,
    "gradient_checkpointing": true,

    "per_device_train_batch_size": 1,
    "gradient_accumulation_steps": 4,

    "logging_steps": 1,

    "max_completion_length": 64,

    "num_generations": 2,
    "temperature": 0.9,
    "top_p": 0.95,

    "beta": 0.0,
    "scale_rewards": true
  }
}
